{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "User name for the Virtual Machine."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the Virtual Machine."
            }
        },
        "projectPrefix": {
            "type": "string",
            "maxLength": 3,
            "minLength": 2,
            "metadata": {
                "description": "Unique project prefix for resources."
            }
        },
        "vmNumber": {
            "type": "int",
            "defaultValue": 1,
            "minLength": 1,
            "maxLength": 9,
            "metadata": {
                "description": "Number of the vm."
            }
        },
        "vmName": {
            "type": "string",
            "maxLength": 5,
            "minLength": 2,
            "metadata": {
                "description": "Name of the virtual machine for network interface."
            }
        },
        "vmNic": {
            "type": "string",
            "metadata": {
                "description": "Resource Id of the netowrk interface"
            }
        }
    },
    "variables": {
        "ubuntuOSVersion": "18.04-LTS",
        "imagePublisher": "Canonical",
        "imageOffer": "UbuntuServer",
        "vmSize": "Standard_A1",
        "vmName": "[concat(parameters('projectPrefix'),'-vm',parameters('vmNumber'),'-',parameters('vmName'))]",
        "vmOSDiskName": "[concat(variables('vmName'),'-','osdisk')]"
    },
    "resources": [
        {
            "apiVersion": "2017-03-30",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('vmName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[variables('vmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('imagePublisher')]",
                        "offer": "[variables('imageOffer')]",
                        "sku": "[variables('ubuntuOSVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[variables('vmOSDiskName')]",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[parameters('vmNic')]"
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {}
}